<div class='text-center w-screen'><%= link_to "Sign out", destroy_player_session_path, :method => :delete %></div>
<div class='w-screen h-screen bg-pink-300 flex justify-center p-10'>
  <div id="<%=dom_id(@game.player)%>" class='w-1/3 h-2/3 bg-green-500 mr-5 grid grid-cols-4 gap-3' data-controller='court' data-action='click->court#dropBox' data-court-create-box-url-value='<%= new_box_path(game_id: @game.id) %>' data-court-delete-box-url-value='/box/'>
    <% @game.boxes.where(:player_id => @game.opponent.id).each do |box| %>
      <div class='h-20 w-20 <%= box.color %>'></div>
    <% end %>
  </div>
  <div id="<%=dom_id(@game.opponent)%>" class='w-1/3 h-2/3 bg-green-500 ml-5 grid grid-cols-4 gap-3' data-controller='court' data-action='click->court#dropBox' data-court-create-box-url-value='<%= new_box_path(game_id: @game.id) %>' data-court-delete-box-url-value='/box/'>

  	<% @game.boxes.where(:player_id => @game.player_id).each do |box| %>
  	  <div class='h-20 w-20 <%= box.color %>'></div>
  	<% end %>
  </div>
</div>